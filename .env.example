# QUIVer Environment Configuration
# Copy this file to .env and update with your values

# Gateway Configuration
QUIVER_GATEWAY_PORT=8080
QUIVER_ENABLE_AUTH=false
QUIVER_JWT_SECRET=your-secure-jwt-secret-here
QUIVER_API_KEY_PREFIX=qvr

# Provider Configuration
QUIVER_PROVIDER_PORT=4001
QUIVER_OLLAMA_URL=http://localhost:11434

# P2P Network Configuration
QUIVER_BOOTSTRAP=/dns4/bootstrap.quiver.network/tcp/4001/p2p/12D3KooWLfChFxVatDEJocxtMgdT8yqRAePZJG26h6WHt6kuCNUW

# Database Configuration (for billing/auth)
DATABASE_URL=postgresql://user:password@localhost/quiver
REDIS_URL=redis://localhost:6379

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Security
ENABLE_TLS=true
TLS_CERT_PATH=/etc/quiver/tls/cert.pem
TLS_KEY_PATH=/etc/quiver/tls/key.pem

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# Feature Flags
ENABLE_CANARY_RESPONSES=true
CANARY_RATE=0.05